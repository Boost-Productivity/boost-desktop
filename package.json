{
  "name": "boost-desktop",
  "version": "1.2.1",
  "description": "Simple desktop to-do list application",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "webpack --mode production",
    "build:watch": "webpack --mode development --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:all": "webpack --mode production && electron-forge make --platform=darwin,win32,linux",
    "make:mac": "webpack --mode production && electron-forge make --platform=darwin",
    "make:win": "webpack --mode production && electron-forge make --platform=win32",
    "make:linux": "webpack --mode production && electron-forge make --platform=linux",
    "publish": "electron-forge publish",
    "create-dmg": "electron-installer-dmg ./out/boost-desktop-darwin-arm64/boost-desktop.app 'Boost Todo' --icon=./assets/icon.icns --background=./assets/dmg-background.png --overwrite --out=./release",
    "build-all": "npm run build && npm run package && npm run make:win && npm run make:linux && npm run create-dmg"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/uuid": "^10.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-dmg": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron-forge/publisher-github": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "appdmg": "^0.6.6",
    "concurrently": "^9.1.2",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^35.1.5",
    "electron-installer-dmg": "^5.0.1",
    "electron-reload": "^2.0.0-alpha.1",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.5",
    "webpack-cli": "^6.0.1"
  }
}
