{
  "name": "boost-desktop",
  "version": "1.0.0",
  "description": "Simple desktop to-do list application",
  "main": "dist/main.js",
  "scripts": {
    "start": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "build": "webpack --mode production",
    "build:watch": "webpack --mode development --watch",
    "electron:dev": "wait-on dist/renderer.js && electron .",
    "package": "npm run build && electron-builder build --mac --win --linux"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/uuid": "^10.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.5",
    "webpack-cli": "^6.0.1"
  },
  "build": {
    "appId": "com.example.boost-desktop",
    "productName": "Boost Todo",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  }
}